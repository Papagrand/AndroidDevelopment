<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonUsingThreads"
        android:layout_width="wrap_content"
        android:text="Using Threads"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonThreadsFragments"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onClickSwitch"
        />
    <Button
        android:id="@+id/buttonThreadsFragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threads Fragments"
        android:onClick="onClickSwitch"
        app:layout_constraintTop_toBottomOf="@id/buttonUsingThreads"
        app:layout_constraintBottom_toTopOf="@id/buttonAsyncTask"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/buttonAsyncTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async Task"
        android:onClick="onClickSwitch"
        app:layout_constraintTop_toBottomOf="@id/buttonThreadsFragments"
        app:layout_constraintBottom_toTopOf="@id/goToWebsite"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/goToWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой Гитхаб"
        android:onClick="onClickSwitch"
        app:layout_constraintTop_toBottomOf="@id/buttonAsyncTask"
        app:layout_constraintBottom_toTopOf="@id/buttonGetInf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/buttonGetInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой Гитхаб"
        android:onClick="onClickSwitch"
        app:layout_constraintTop_toBottomOf="@id/buttonAsyncTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>